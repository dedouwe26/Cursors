{
    "schemaVersion": 1,
    "id": "cursors",
    "version": "${version}",
    "name": "Cursors",
    "description": "Cursors is a Minecraft mod and library that adds custom cursors to GUIs.",
    "authors": [
        "0xDED"
    ],
    "contact": {
        "homepage": "https://github.com/dedouwe26/Cursors",
        "issues": "https://github.com/dedouwe26/Cursors/issues",
        "sources": "https://github.com/dedouwe26/Cursors"
    },
    "icon": "assets/cursors/icon.png",
    "license": "MIT",
    "environment": "client",
    "entrypoints": {
        "client": [
            "oxded.cursors.CursorsClient"
        ]
    },
    "mixins": [
		{
			"config": "cursors.client.mixins.json",
			"environment": "client"
		}
    ],
    "depends": {
        "fabricloader": ">=0.16.10",
        "minecraft": "1.21.x",
        "java": ">=17",
        "fabric-resource-loader-v0": "*"
    }
}